# Crisis Detection Service Configuration
NODE_ENV=development
PORT=3007

# AI Services
OPENAI_API_KEY=your-openai-api-key
CLAUDE_API_KEY=your-claude-api-key

# Crisis Resources API
CRISIS_HOTLINE_API_KEY=your-crisis-api-key
CRISIS_HOTLINE_API_URL=https://api.crisisresources.org/v1

# Detection Thresholds
CRISIS_CONFIDENCE_THRESHOLD=0.75
FALSE_POSITIVE_THRESHOLD=0.3

# Response Configuration
RESPONSE_DELAY_MS=500
MAX_INTERVENTIONS_PER_SESSION=3

# Redis
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Feature Flags
ENABLE_CRISIS_DETECTION=true
ENABLE_PROFESSIONAL_REFERRALS=true